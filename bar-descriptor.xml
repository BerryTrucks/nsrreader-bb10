<qnx xmlns="http://www.qnx.com/schemas/application/1.0">

<!-- BlackBerry Tablet OS application descriptor file.

    Specifies parameters for identifying, installing, and launching native applications on BlackBerry Tablet OS.

-->

    <!-- A universally unique application identifier. Must be unique across all BlackBerry Tablet OS applications.
         Using a reverse DNS-style name as the id is recommended. (Eg. com.example.ExampleApplication.) Required. -->
    <id>com.gmail.reader.nsr</id>

    <!-- The name that is displayed in the BlackBerry Tablet OS application installer. 
         May have multiple values for each language. See samples or xsd schema file. Optional. -->
    
    <!-- A string value of the format <0-999>.<0-999>.<0-999> that represents application version which can be used to check for application upgrade. 
         Values can also be 1-part or 2-part. It is not necessary to have a 3-part value.
         An updated version of application must have a versionNumber value higher than the previous version. Required. -->
    <versionNumber>1.0.0</versionNumber>

    <!-- Fourth digit segment of the package version. First three segments are taken from the 
         <versionNumber> element.  Must be an integer from 0 to 2^16-1 -->
    <buildId>1</buildId>
                 
    <!-- A string value (such as "v1", "2.5", or "Alpha 1") that represents the version of the application, as it should be shown to users. Optional. -->
    <!-- <versionLabel></versionLabel> -->

    <!-- Description, displayed in the BlackBerry Tablet OS application installer.
         May have multiple values for each language. See samples or xsd schema file. Optional. -->

    <!-- Copyright information. Optional. -->
    <!-- <copyright></copyright> -->

    <!--  Name of author which is used for signing. Must match the developer name of your development certificate. -->
    <author>Alexander Saprykin</author>
    <description>Powerful PDF, DjVu, TIFF and TXT reader for BlackBerry 10. Has plenty of features like text reflow, pinch zooming, password protected documents support, sharing, inverted colors mode and more. Easy to use everywhere.</description>
    
    <!--  Unique author ID assigned by signing authority. Required if using debug tokens. -->
    <!-- <authorId>ABC1234YjsnUk235h</authorId> -->
   
    <initialWindow>
        <autoOrients>true</autoOrients>
        <systemChrome>none</systemChrome>
        <transparent>false</transparent>
    </initialWindow>
    
    <!--  The category where the application appears. Either core.games or core.media. -->
    <splashScreens>
       <image/>
       <image>nsrreader-splash-720x720.png</image>
       <image>nsrreader-splash-768x1280.png</image>
       <image>nsrreader-splash-1280x768.png</image>
    </splashScreens>
    <name>NSR Reader</name>
    <configuration name="Device-Debug">
       <platformArchitecture>armle-v7</platformArchitecture>
       <asset path="arm/o.le-v7-g/nsrreader_bb10" entry="true" type="Qnx/Elf">nsrreader_bb10</asset>
    </configuration>
    <configuration name="Device-Release">
       <entryPointType>Qnx/Cascades</entryPointType>
       <platformArchitecture>armle-v7</platformArchitecture>
       <asset path="arm/o.le-v7/nsrreader_bb10.so" entry="true" type="Qnx/Elf">nsrreader_bb10.so</asset>
    </configuration>
    <configuration name="Device-Profile">
       <platformArchitecture>armle-v7</platformArchitecture>
       <asset path="arm-p/o.le-v7-g/nsrreader_bb10" entry="true" type="Qnx/Elf">nsrreader_bb10</asset>
    </configuration>
    <configuration name="Simulator-Debug">
       <platformArchitecture>x86</platformArchitecture>
       <asset path="x86/o-g/nsrreader_bb10" entry="true" type="Qnx/Elf">nsrreader_bb10</asset>
    </configuration>
    
    <!--  The icon for the application, which should be 86x86. -->
    <icon>
        <image>icon.png</image>
    </icon>

    <asset path="icon.png">icon.png</asset>
    <asset path="assets">assets</asset>
    
    <!-- Locale support -->
    <asset path="translations" dest="qm">
        <include name="*.qm"/>
    </asset>
    <asset path="assets/nsrreader-splash-720x720.png">nsrreader-splash-720x720.png</asset>
    <asset path="assets/nsrreader-splash-768x1280.png">nsrreader-splash-768x1280.png</asset>
    <asset path="assets/nsrreader-splash-1280x768.png">nsrreader-splash-1280x768.png</asset>
    
    <!-- Request permission to execute native code.  Required for native applications. -->
    <permission system="true">run_native</permission>
    <permission>access_shared</permission>
    <env var="LD_LIBRARY_PATH" value="app/native/lib:/usr/lib/qt4/lib"/>
    
    <env var="CASCADES_THEME" value="dark"/>
    
    <invoke-target id="com.gmail.reader.nsr">
        <invoke-target-type>application</invoke-target-type>
        <invoke-target-name>NSR Reader</invoke-target-name>
        <filter>
            <action>bb.action.OPEN</action>
            <mime-type>application/pdf</mime-type>
            <mime-type>image/vnd.djvu</mime-type>
            <mime-type>image/x-djvu</mime-type>
            <mime-type>image/tiff</mime-type>
            <mime-type>text/plain</mime-type>
            <property var="uris" value="file://"/>
        </filter>
        <filter>
            <action>bb.action.OPEN</action>
            <mime-type>*</mime-type>
            <property var="uris" value="file://"/>
            <property var="exts" value="pdf,djvu,djv,tiff,tif,txt"/>
        </filter>
        <icon>
            <image>icon.png</image>
        </icon>
    </invoke-target>
    <invoke-target id="com.gmail.reader.nsr.viewer">
        <invoke-target-type>card.previewer</invoke-target-type>
        <invoke-target-name>NSR Reader</invoke-target-name>
        <filter>
            <action>bb.action.VIEW</action>
            <mime-type>application/pdf</mime-type>
            <mime-type>image/vnd.djvu</mime-type>
            <mime-type>image/x-djvu</mime-type>
            <mime-type>image/tiff</mime-type>
            <mime-type>text/plain</mime-type>
            <property var="uris" value="file://"/>
        </filter>
        <filter>
            <action>bb.action.VIEW</action>
            <mime-type>*</mime-type>
            <property var="uris" value="file://"/>
            <property var="exts" value="pdf,djvu,djv,tiff,tif,txt"/>
        </filter>
        <icon>
            <image>icon.png</image>
        </icon>
    </invoke-target>
</qnx>
